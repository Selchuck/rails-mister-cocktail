<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1534603649594-2078fe2ad26c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">

  <div class="container">
    <h1>Selchuk's Cocktail Bar</h1>
  </div>


  <div class"container">
    <h2>Drinks List</h2>
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
    <ul>
      <li><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
        <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      </li>
    </ul>
    <% end %>
    </div>
    <div>
    <%= link_to "Add Your Own!", new_cocktail_path, class: "btn-main" %>
    </div>
  </div>
</div>
