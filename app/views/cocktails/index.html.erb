<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1534603649594-2078fe2ad26c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">

  <div class="container">
    <h1>Dizzy Lizzy's Cocktail Bar</h1>
    <div id="add">
      <%= link_to "Add Cocktail", new_cocktail_path, class: "btn" %>
    </div>
  </div>

</div>


<div class="container">
  <h2>Dizzy Lizzy Cocktail List</h2>
  <div class="cards" >
    <% @cocktails.each do |cocktail| %>
      <div class="card-category">
        <%= cl_image_tag cocktail.image, height: 300, width: 400, crop: :fill %>
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %>
      </div>
    <% end %>
  </div>
</div>


