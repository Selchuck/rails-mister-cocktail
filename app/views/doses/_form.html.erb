<%= simple_form_for([@cocktail, @dose]) do |f| %>

  <div class="form-input">
    <%= f.association :ingredient %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-main" %>
    <%= link_to 'Cancel', cocktail_path(@cocktail), class: "btn-cancel" %>
  </div>
<% end %>
