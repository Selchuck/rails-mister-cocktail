<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar navbar-expand-lg navbar-expand-md navbar-light navbar-lewagon">
      <%= link_to "/", class: "navbar-brand" do %><i class="fas fa-cocktail"></i>
      <% end %>
      <div>
        <form class="form-inline">
        <input class="form-control mr-sm-2" type="text" name="query" id="search" placeholder="Search cocktails" aria-label="Search">
        <input class="btn" type="submit" value="search">
        </form>
      </div>
    </div>

      <%= yield %>
      <%= javascript_include_tag "application" %> <!-- from app/assets/javascripts/application.js -->
      <%= javascript_pack_tag "application" %>
      <footer>
      <div class="footer-container">
        <nav>
          <ul>
            <li><%= link_to "Contact Us", "#" %></li>
            <li><%= link_to "Terms of Use", "#" %></li>
            <li><%= link_to "Privacy Policy", "#" %></li>
            <li><a href="https:selchuk-karakus.dev">Â© 2019 Copyright: Selchuk-karakus.dev</a></li>
          </ul>
        </nav>
      </div>
      </footer>
    </body>
</html>
